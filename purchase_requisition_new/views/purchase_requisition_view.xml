<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_purchase_requisition_tree" model="ir.ui.view">
        <field name="name">purchase.requisition.tree</field>
        <field name="model">purchase.requisition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_purchase_requisition_form" model="ir.ui.view">
        <field name="name">purchase.requisition.form</field>
        <field name="model">purchase.requisition</field>
        <field name="arch" type="xml">
            <form string="Purchase Requisition">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,store,production,gm,purchase,rfq"/>

                    <!-- Preparing Group: visible only when draft and only to Preparing group (or admin) -->
                    <button name="action_store_approve"
                            type="object"
                            string="Approve (Store)"
                            class="btn-primary"
                            groups="purchase_requisition_new.group_purchase_requisition_preparing,base.group_system"
                            attrs="{'invisible': [('state','!=','draft')]}"/>

                    <!-- Store Department -->
                    <button name="action_production_approve"
                            type="object"
                            string="Approve (Production)"
                            class="btn-secondary"
                            groups="purchase_requisition_new.group_purchase_requisition_store,base.group_system"
                            attrs="{'invisible': [('state','!=','store')]}"/>

                    <!-- Production -->
                    <button name="action_gm_approve"
                            type="object"
                            string="Approve (GM)"
                            class="btn-info"
                            groups="purchase_requisition_new.group_purchase_requisition_production,base.group_system"
                            attrs="{'invisible': [('state','!=','production')]}"/>

                    <!-- General Manager -->
                    <button name="action_purchase_approve"
                            type="object"
                            string="Move to Purchase"
                            class="btn-warning"
                            groups="purchase_requisition_new.group_purchase_requisition_gm,base.group_system"
                            attrs="{'invisible': [('state','!=','gm')]}"/>

                    <!-- Purchase Department -->
                    <button name="action_rfq"
                            type="object"
                            string="Create RFQ"
                            class="btn-success"
                            groups="purchase_requisition_new.group_purchase_requisition_purchase,base.group_system"
                            attrs="{'invisible': [('state','!=','purchase')]}"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="partner_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="date_order" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="purchase_order_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Requisition Lines">
                            <field name="line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree editable="bottom">
                                    <field name="product_id" attrs="{'readonly':[('parent.state','!=','draft')]}"/>
                                    <field name="product_qty" attrs="{'readonly':[('parent.state','!=','draft')]}"/>
                                    <field name="price_unit" attrs="{'invisible':[('parent.state','!=','rfq')]}"/>
                                    <field name="notes" attrs="{'readonly':[('parent.state','!=','draft')]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
